<% content_for :title do %>
<% @post.title %>
<% end %>

<% content_for :edit_post_link do %>
<% link_to "Edit this post", edit_post_path(@post) %>
<% end %>

<% content_for :delete_post_link do %>
<% link_to "Delete this post", @post, method: 'Delete' %>
<% end %>

<h3><%= @post.title %></h3>
<p>
  <%= @post.body %>
</p>
<p>
  Author: <%= @post.user.name %>
</p>
